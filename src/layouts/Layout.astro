---
import "../styles/global.css";
import "../styles/font.css";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="---" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />

		<title>{title}</title>
		<meta name="title" content={title} />
		<meta property="og:title" content={title} />
		<meta
			name="description"
			content="Dion12 is a Graphic Designer, trusted by over 400+ clients. For more information, take a look at the website."
		/>
		<meta
			property="og:description"
			content="Dion12 is a Graphic Designer, trusted by over 400+ clients. For more information, take a look at the website."
		/>
		<meta property="og:url" content="https://dion12.nl/" />
		<meta property="og:image" content="https://dion12.nl/img/banner.png" />
		<meta name="theme-color" content="#fb6302" />
	</head>
	<body>
		<div class="absolute z-10 inset-0 bg-gray-300 introanimation"></div>

		<slot />

		<Footer />

		<style is:global></style>
		<script>
			const elementVisible = 15;
			const windowHeight = window.innerHeight;
			function reveal() {
				document.querySelectorAll(".reveal").forEach((reveal) => {
					const elementTop = reveal.getBoundingClientRect().top;

					if (elementTop < windowHeight - elementVisible)
						reveal.classList.add("active");
				});
			}
			window.addEventListener("scroll", reveal);
			document.addEventListener("astro:load", reveal);
			reveal();
		</script>
	</body>
</html>
